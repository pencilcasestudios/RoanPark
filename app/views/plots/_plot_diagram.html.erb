<div class="thumbnail">
  <%= link_to(
  			image_tag(
  				"land_projects/#{@plot.housing_project.subdomain}/#{@plot.street_name_and_number}_plot_diagram_cover.png",
  				alt: t("views.plots._#{@plot.housing_project.subdomain}_plot_diagram.copy.plot_diagram", plot: @plot.street_address),
  				title: t("views.plots._#{@plot.housing_project.subdomain}_plot_diagram.copy.plot_diagram", plot: @plot.street_address)
  			),
  			asset_path("land_projects/#{@plot.housing_project.subdomain}/#{@plot.street_name_and_number}_plot_diagram.pdf"),
  			target: "_blank"
  		)
  %>
  <div class="caption">
    <p>
      <%= t("views.plots._#{@plot.housing_project.subdomain}_plot_diagram.copy.plot_diagram", plot: @plot.street_address) %><br />
      <%= link_to(
      			t("views.plots._#{@plot.housing_project.subdomain}.links.download_pdf"),
      			asset_path("land_projects/#{@plot.housing_project.subdomain}/#{@plot.street_name_and_number}_plot_diagram.pdf"),
      			target: "_blank"
      		)
      %>
    </p>
  </div>
</div>
