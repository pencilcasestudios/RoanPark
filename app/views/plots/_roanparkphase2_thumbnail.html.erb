<div class="thumbnail">
  <% if Galaunia::Application.assets.find_asset("land_projects/#{@plot.housing_project.subdomain}/#{document}_cover.png").present? %>
	  <%= link_to(image_tag("land_projects/#{@plot.housing_project.subdomain}/#{document}_cover.png", alt: t("views.plots._#{@plot.housing_project.subdomain}_thumbnail.copy.#{document}_html"), title: t("views.plots._#{@plot.housing_project.subdomain}_thumbnail.copy.#{document}_html")), asset_path("land_projects/#{@plot.housing_project.subdomain}/#{document}.pdf"), target: "_blank") %>
	<% else %>
	  <%= image_tag("land_projects/image_not_available_portrait.png", alt: "#{t("views.plots._#{@plot.housing_project.subdomain}.copy.image_not_available")}", title: "#{t("views.plots._#{@plot.housing_project.subdomain}.copy.image_not_available")}") %>
	<% end %>
  <div class="caption">
    <p>
      <%= t("views.plots._#{@plot.housing_project.subdomain}_thumbnail.copy.#{document}_html") %><br />
      <%= link_to t("views.plots._#{@plot.housing_project.subdomain}.links.download_pdf"), asset_path("land_projects/#{@plot.housing_project.subdomain}/#{document}.pdf"), target: "_blank" %>
    </p>
  </div>
</div>
