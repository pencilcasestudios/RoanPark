<% title t("views.plots.show.title", project_name: @plot.housing_project.name, plot_name: @plot.street_address)  %>




<section id="availability">
	<h1>
		<%= link_to @plot.housing_project.name, @plot.housing_project %><br />
		<%= @plot.street_address %>
	</h1>

	<br />

	<p>
		<strong><%= t("views.plots.show.copy.area") %></strong>:
		<%= t("views.plots.show.copy.plot_area", plot_area_in_hectares: number_with_precision(@plot.area, precision: 1), plot_area_in_acres: number_with_precision(@plot.area * 2.47105, precision: 1)) %><br />

		<strong><%= t("views.plots.show.copy.available") %></strong>:
		<%= t("views.plots.show.copy.availability.#{@plot.is_available?}") %>
	</p>
</section><!-- /#availability -->




<br class="section_break">




<!-- Pictures -->
<h2><%= t("views.plots.show.headings.pictures") %></h2>

<section id="pictures">
	<div class="row">
		<!-- Plot image -->
		<div class="col-lg-8">
			<% if RoanPark::Application.assets.find_asset("land_projects/#{@plot.housing_project.subdomain}/#{@plot.street_name_and_number}_plot.jpg").nil? %>
				<%= image_tag("land_projects/generic_plot.jpg", alt: "#{@plot.street_address} plot", title: "#{@plot.street_address} plot", class: "img-responsive center-block") %>
			<% else %>
				<%= image_tag("land_projects/#{@plot.housing_project.subdomain}/#{@plot.street_name_and_number}_plot.jpg", alt: "#{@plot.street_address} plot", title: "#{@plot.street_address} plot", class: "img-responsive center-block") %>
			<% end %>
			<p class="caption"><%= t("views.plots.show.copy.plot_name", plot: @plot.street_address) %></p>
		</div>
		<!-- /Plot image -->

		<!-- Beacon image -->
		<% if RoanPark::Application.assets.find_asset("land_projects/#{@plot.housing_project.subdomain}/#{@plot.street_name_and_number}_beacon.jpg").present? %>
			<div class="col-lg-2">
				<%= image_tag("land_projects/#{@plot.housing_project.subdomain}/#{@plot.street_name_and_number}_beacon.jpg", alt: "#{@plot.street_address} beacon", title: "#{@plot.street_address} beacon", class: "img-responsive center-block") %>
				<p class="caption"><%= t("views.plots.show.copy.plot_beacon", plot: @plot.street_address) %></p>
			</div>
		<% end %>
		<!--/ Beacon image -->

		<!-- Electricity image -->
		<% if RoanPark::Application.assets.find_asset("land_projects/#{@plot.housing_project.subdomain}/#{@plot.street_address.gsub(" ", "_").downcase}_electricity.jpg").present? %>
			<div class="col-lg-2">
				<%= image_tag("land_projects/#{@plot.housing_project.subdomain}/#{@plot.street_address.gsub(" ", "_").downcase}_electricity.jpg", alt: t("views.plots._#{@plot.housing_project.subdomain}.copy.power_line_over_plot"), title: t("views.plots._#{@plot.housing_project.subdomain}.copy.power_line_over_plot")) %>
				<p class="caption"><%= t("views.plots.show.copy.power_line_over_plot") %></p>
			</div>
		<% end %>
		<!-- /Electricity image -->
	</div><!-- /.row -->
</section><!-- /#pictures -->
<!-- /Pictures -->




<br class="spacer">




<!-- Statutory Approvals -->
<h2><%= t("views.plots.show.headings.statutory_approvals") %></h2>

<section id="statutory_approvals">
	<div class="row">
		<div class="col-lg-2">
			<%= render "thumbnail", document: "business_name_registration_certificate" %>
		</div>
		<div class="col-lg-2">
			<%= render "thumbnail", document: "lusaka_province_planning_authority_subdivision_approval" %>
		</div>
		<div class="col-lg-2">
			<%= render "thumbnail", document: "lusaka_province_planning_authority_numbering" %>
		</div>
		<div class="col-lg-2">
			<%= render "thumbnail", document: "ministry_of_lands_marking_off_from_main_title" %>
		</div>
		<% if RoanPark::Application.assets.find_asset("land_projects/#{@plot.housing_project.subdomain}/#{@plot.street_name_and_number}_title_deed_cover.png").present? &&
					RoanPark::Application.assets.find_asset("land_projects/#{@plot.housing_project.subdomain}/#{@plot.street_name_and_number}_title_deed.pdf").present?
		%>
			<div class="col-lg-2">
				<%= render "title_deed" %>
			</div>
		<% end %>
		<% if RoanPark::Application.assets.find_asset("land_projects/#{@plot.housing_project.subdomain}/#{@plot.street_name_and_number}_plot_diagram_cover.png").present? &&
					RoanPark::Application.assets.find_asset("land_projects/#{@plot.housing_project.subdomain}/#{@plot.street_name_and_number}_plot_diagram.pdf").present?
		%>
			<div class="col-lg-2">
				<%= render "plot_diagram" %>
			</div>
		<% end %>
	</div><!-- /.row -->
</section><!-- /#statutory_approvals -->
<!-- /Statutory Approvals -->




<br class="section_break">




<div class="row">


	<!-- General plan -->
	<div class="col-lg-4">
		<div class="row">
			<section id="general_plan" class="section">

				<h2><%= t("views.plots.show.headings.general_plan") %></h2>

				<div class="col-lg-6">
					<%= render "thumbnail", document: "general_plan" %>
				</div>
				<div class="col-lg-6">
					<%= render "thumbnail", document: "topographical_plan" %>
				</div>
			</section>
		</div><!-- /.row -->
	</div>
	<!-- /General plan -->


	<!-- Roads -->
	<div class="col-lg-4">
		<div class="row">
			<section id="roads" class="section">

				<h2><%= t("views.plots.show.headings.roads") %></h2>

				<div class="col-lg-6">
					<%= render "thumbnail", document: "rda_external_road_expression_of_interest" %>
				</div>
				<div class="col-lg-6">
					<%= render "thumbnail", document: "rda_external_road_invitation_for_bids" %>
				</div>
			</section>
		</div><!-- /.row -->
	</div>
	<!-- /Roads -->


	<!-- Power -->
	<div class="col-lg-4">
		<div class="row">
			<section id="power" class="section">

				<h2><%= t("views.plots.show.headings.power") %></h2>

				<div class="col-lg-6">
							<%= render "thumbnail", document: "zesco_power_grid_design_approval" %>
				</div>
				<div class="col-lg-6">
							<%= render "thumbnail", document: "zesco_power_grid_commissioning" %>
				</div>
			</section>
		</div><!-- /.row -->
	</div>
	<!-- /Power -->


</div><!-- /.row -->
